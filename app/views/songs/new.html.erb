<h2 id = "upload">Upload a new MP3:</h2>  

<div class="row">
	<div class="span6 offset3">
		<%= form_for @song do |f| %>
			<%= f.label :song_file %>
			<%= f.file_field :song_file %>
			
			<%= f.label :title %>
			<%= f.text_field :title %>
			
			<%= f.label :artist %>
			<%= f.text_field :artist %>
			
			<%= f.label :bpm %>
			<%= f.text_field :bpm %>
			
			<%= f.submit "Upload song", class: "btn btn-lare btn-primary" %>
		<% end %>
	</div>
</div>